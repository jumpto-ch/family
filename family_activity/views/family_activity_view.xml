<odoo>
    <data>
        <record id="family_activity_form_view" model="ir.ui.view">
            <field name="name">family_activity form view</field>
            <field name="model">family_activity</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Create event" class="btn-light" name="action_create_event" type="object"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='family_activity_action' model='ir.actions.act_window'>
            <field name="name">Activity action</field>
            <field name="res_model">family_activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Activity" id="family_activity_menu" parent="hr.menu_hr_root" action="family_activity_action"/>
    </data>
</odoo>