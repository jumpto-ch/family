<odoo>
    <record id="account_move_simple_create_wizard_form_view" model="ir.ui.view">
        <field name="name">account.move.simple.create.wizard.form</field>
        <field name="model">account.move.simple.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Entry">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Draft</span>
                        </h1>
                    </div>
                    <group>
                        <field name="partner_id"
                               context="{'show_address': 1, 'default_is_company': True, 'show_vat': True}"
                               domain="[('type', '!=', 'private')]"
                               options='{"always_reload": True, "no_quick_create": True}'/>
                        <field name="account_id"/>
                        <field name="account_payment_journal_id"/>

                        <field name="price_unit"/>
                        <field name="invoice_date" options="{'datepicker': {'warn_future': true}}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_post" string="Post" class="oe_highlight"
                            type="object" data-hotkey="v"/>
                    <button string="Cancel Entry" name="cancel_button" class="btn-secondary" data-hotkey="w" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>